<div class="row">
  <center>
    <!-- Left side -->
    <div class="col-md-6">
      <h4 class="red_font">Ready to eat!</h4>
      <div id="ready_to_eat">
        {{#each burgers}}
          {{#unless devoured}}
          <form action="burger/eat/{{id}}" method="POST">
            <div class="input-group">
              <li class="form-control">{{id}}. {{burger_name}}</li>
                <span class="input-group-btn">
                  <button class="btn btn-danger devour-button" type="submit">Devour It</button>
                </span>
            </div>
          </form>
          {{/unless}}
        {{/each}}

      </div>
    </div>

    <!-- Right side -->
    <div class="col-md-6">
      <h4 class="red_font">Already eaten!</h4>
      <div id="already_eaten">
        {{#each burgers}}
          {{#if this.devoured}}
            <div class="input-group">
              <div class="input-group-btn">
                <li class="form-control">{{this.id}}. {{this.burger_name}}</li>
              </div>
            </div>
          {{/if}}
        {{/each}}

      </div>
    </div>
  </center>
</div>